{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path":"$DOWNLOAD/**" 
        }
      ]
    },
    "fs:allow-exists",
    "fs:write-files",
    "dialog:allow-open",
    "dialog:allow-save"
  ]
}
